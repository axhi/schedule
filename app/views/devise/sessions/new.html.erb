<div class="log-in-form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="log-in-input">
  <%= f.email_field :email, :autofocus => true, placeholder: 'Email' %></div>

  <div class="log-in-input">
  <%= f.password_field :password, placeholder: 'Password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="log-in-input"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="log-in-input"><%= f.submit "Sign in" %></div>
<% end %>
<div class="log-in-input">
  <%= render "devise/shared/links" %>
</div>
</div>
